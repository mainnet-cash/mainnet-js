{
  "test": "jest",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mainnet-cash/mainnet-js/"
  },
  "bugs": {
    "url": "https://github.com/mainnet-cash/mainnet-js/issues"
  },
  "name": "mainnet-js",
  "version": "0.1.5",
  "homepage": "https://mainnet.cash",
  "main": "dist/mainnet-node-0.1.5.js",
  "types": "index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.js.map"
  ],
  "scripts": {
    "api:validate": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli validate -i /local/swagger/v1/api.yml",
    "api:build:server": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli generate -i /local/swagger/v1/api.yml -g nodejs-express-server -o /local/generated/serve",
    "api:build:client": "node swagger/generate.js",
    "api:serve": "yarn install --only=production --cwd generated/serve/ --prefix generated/serve/ && node generated/serve/serve.js",
    "api:serve:install": "yarn install  --only=production --cwd generated/serve/ --prefix generated/serve/",
    "api:serve:cluster": "yarn --cwd generated/serve/ --prefix generated/serve/ start",
    "cli": "npx ts-node src/cli.ts",
    "coverage": "rm -rf ./node_modules/.cache && rm -rf coverage/ && rm -rf .nyc_output/ && NODE_ENV=test LOG_LEVEL=silent yarn run cover",
    "cover": "yarn run cover:core && yarn run cover:report",
    "cover:core": "nyc --silent yarn run test",
    "cover:browser": "nyc --silent --no-clean yarn run test:browser",
    "cover:api": "nyc --silent --no-clean yarn run test:api",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "test": "npx jest --runInBand --detectOpenHandles --forceExit",
    "test:api": "yarn install --cwd generated/serve/ --prefix generated/serve/  && yarn test  ",
    "test:browser": "npx jest --config jest/browser.config.js --detectOpenHandles",
    "test:wallet": "npx jest --detectOpenHandles",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "build": "npx webpack",
    "demo": "npx reload --dir=demo/",
    "reload": "npx reload --dir=jest/playwright"
  },
  "devDependencies": {
    "@types/bip39": "^3.0.0",
    "@types/jest": "^26.0.14",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.11.8",
    "@types/pg": "^7.14.5",
    "@types/pg-format": "^1.0.1",
    "events": "^3.2.0",
    "fake-indexeddb": "^3.1.2",
    "jest": "^26.5.3",
    "jest-playwright-preset": "^1.3.1",
    "jest-process-manager": "^0.2.5",
    "node-postgres": "^0.6.2",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "playwright": "^1.4.2",
    "prettier": "^2.1.2",
    "reload": "^3.1.1",
    "supertest": "^4.0.2",
    "terser-webpack-plugin": "^4.2.3",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "ts-loader": "^8.0.5",
    "typescript": "^3.9.7",
    "unzipper": "^0.10.11",
    "util": "^0.12.3",
    "webpack": "^v5.1.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.17.2",
    "assert": "^2.0.0",
    "axios": "^0.20.0",
    "crypto": "^1.0.1",
    "bitcoinjs-message": "^2.1.4",
    "cashaddrjs": "^0.4.4",
    "base58check": "^2.0.0",
    "bip39": "^3.0.3",
    "cashscript": "^0.5.5",
    "deepmerge": "^4.2.2",
    "dexie": "^3.0.2",
    "dotenv": "^8.2.0",
    "electrum-cash": "^2.0.6",
    "parse-database-url": "^0.3.0",
    "pg": "^8.4.1",
    "pg-format": "^1.0.4",
    "pg-native": "^3.0.0",
    "postgresql": "0.0.1",
    "qrcode-svg": "^1.1.0",
    "winston": "3.3.3",
    "yarn": "^1.22.10"
  },
  "keywords": [
    "bch",
    "bitcoin cash"
  ],
  "sideEffects": false,
  "author": "readcash"
}
