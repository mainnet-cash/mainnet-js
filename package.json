{
  "test": "jest",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mainnet-cash/mainnet-js/"
  },
  "bugs": {
    "url": "https://github.com/mainnet-cash/mainnet-js/issues"
  },
  "name": "mainnet-js",
  "version": "0.3.22",
  "homepage": "https://mainnet.cash",
  "main": "dist/mainnet-node-0.3.22.js",
  "browser": "dist/mainnet-0.3.22.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.js.map",
    "dist/*.d.ts"
  ],
  "scripts": {
    "api:validate": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli validate -i /local/swagger/v1/api.yml",
    "api:build:server": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli generate -i /local/swagger/v1/api.yml -g nodejs-express-server -o /local/generated/serve",
    "api:build:ts-mock": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli generate -i /local/swagger/v1/api.yml -g typescript-node -o /local/generated/client/typescript-mock",
    "api:build:client": "node swagger/generate.js",
    "api:serve": "yarn run api:serve:install && node generated/serve/serve.js",
    "api:serve:install": "yarn install --production=true --cwd generated/serve/ --prefix generated/serve/",
    "api:serve:install:dev": "yarn install  --cwd generated/serve/ --prefix generated/serve/",
    "api:serve:test": "yarn --cwd generated/serve/ --prefix generated/serve/ test",
    "api:serve:cluster": "yarn --cwd generated/serve/ --prefix generated/serve/ start",
    "cli": "npx ts-node src/cli.ts",
    "coverage": "rm -rf ./node_modules/.cache && rm -rf coverage/ && rm -rf .nyc_output/ && NODE_ENV=test LOG_LEVEL=silent yarn run cover",
    "cover": "yarn run cover:core && yarn run cover:report",
    "cover:core": "nyc --silent yarn run test",
    "cover:browser": "nyc --silent --no-clean yarn run test:browser",
    "cover:api": "nyc --silent --no-clean yarn run test:api",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "docs": "npx typedoc",
    "test": "npx jest --runInBand --detectOpenHandles --forceExit",
    "test:sign": "npx jest src/message/signed.test.ts --runInBand --detectOpenHandles --forceExit",
    "test:api": "yarn build && yarn api:serve:test",
    "test:browser": "yarn build && npx jest --config jest.config.browser.js --detectOpenHandles",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "build": "npx webpack",
    "postinstall": "yarn link",
    "demo": "npx reload --dir=demo/",
    "reload": "npx reload --dir=jest/playwright"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^15.12.2",
    "@types/pg": "^8.6.0",
    "@types/pg-format": "^1.0.1",
    "events": "^3.2.0",
    "fake-indexeddb": "^3.1.2",
    "jest": "^27.0.4",
    "jest-playwright-preset": "^1.6.1",
    "jest-process-manager": "^0.3.1",
    "node-postgres": "^0.6.2",
    "nyc": "^15.1.0",
    "pg-native": "^3.0.0",
    "playwright": "^1.12.1",
    "prettier": "^2.3.1",
    "reload": "^3.2.0",
    "supertest": "^6.1.3",
    "terser-webpack-plugin": "^5.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typedoc": "^0.20.25",
    "typedoc-plugin-markdown": "^3.5.0",
    "typescript": "^4.3.2",
    "unzipper": "^0.10.11",
    "util": "^0.12.3",
    "winston": "3.3.3"
  },
  "optionalDependencies": {
    "@bitauth/libauth": "^1.18.0",
    "assert": "^2.0.0",
    "axios": "^0.21.1",
    "bchaddrjs-slp": "^0.2.12",
    "bigint-polyfill": "^0.1.0",
    "bignumber": "^1.1.0",
    "bignumber.js": "^9.0.1",
    "bip39": "^3.0.3",
    "buffer": "^6.0.3",
    "cashaddrjs": "^0.4.4",
    "cashc": "^0.6.1",
    "cashscript": "^0.6.1",
    "deepmerge": "^4.2.2",
    "dexie": "^3.0.2",
    "dotenv": "^10.0.0",
    "electrum-cash": "^2.0.6",
    "eventsource": "^1.0.7",
    "npm-dts-webpack-plugin": "^1.3.7",
    "parse-database-url": "^0.3.0",
    "pg": "^8.4.1",
    "pg-format": "^1.0.4",
    "qrcode-svg": "^1.1.0",
    "slp-parser": "^0.0.4",
    "ts-loader": "^9.2.3",
    "webpack": "^v5.1.0",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "yarn": "^1.22.10"
  },
  "sideEffects": false,
  "keywords": [
    "bch",
    "bitcoin cash"
  ],
  "author": "readcash"
}
