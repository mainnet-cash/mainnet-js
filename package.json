{
  "test": "jest",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mainnet-cash/mainnet-js/"
  },
  "bugs": {
    "url": "https://github.com/mainnet-cash/mainnet-js/issues"
  },
  "name": "@mainnet-cash/root",
  "private": true,
  "workspaces": {
    "packages": [
      "./packages/*"
    ],
    "nohoist": [
      "**/ts-jest",
      "**/ts-jest/**",
      "**/@types/jest/",
      "**/@types/jest/**",
      "**/vue-jest/**",
      "**/@vue/**",
      "**/jest-runner/**"
    ]
  },
  "version": "0.4.8",
  "homepage": "https://mainnet.cash",
  "scripts": {
    "api:validate": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli validate -i /local/swagger/v1/api.yml",
    "api:build:server": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli generate -i /local/swagger/v1/api.yml -g nodejs-express-server -o /local/packages/mainnet-cash",
    "api:build:client": "node swagger/generate.js",
    "api:serve:install": "yarn install --production=true --cwd packages/mainnet-cash/ --prefix packages/mainnet-cash/",
    "api:serve:test": "yarn workspace mainnet-cash run test",
    "api:serve:cluster": "yarn workspace mainnet-cash run start",
    "api:serve": "node packages/mainnet-cash/serve.js",
    "cli": "yarn workspace mainnet-cash run cli",
    "coverage": "rm -rf ./node_modules/.cache && rm -rf coverage/ && rm -rf .nyc_output/ && NODE_ENV=test LOG_LEVEL=silent yarn run cover",
    "cover": "yarn run cover:core && yarn run cover:report",
    "cover:core": "nyc --silent yarn run test",
    "cover:browser": "nyc --silent --no-clean yarn run test:browser",
    "cover:api": "nyc --silent --no-clean yarn run test:api",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "demo:build": "yarn workspace @mainnet-cash/demo run build",
    "demo:test": "yarn workspace @mainnet-cash/demo run test:unit",
    "demo:serve": "yarn workspace @mainnet-cash/demo run serve",
    "docs": "npx typedoc",
    "test": "node --max-old-space-size=8000  --expose-gc ./node_modules/jest/bin/jest.js --runInBand  --config jest.config.js  --logHeapUsage --forceExit",
    "test:skip": "SKIP_REGTEST_INIT=1 yarn test",
    "test:rest": "yarn workspace mainnet-cash run test",
    "test:rest:skip": "SKIP_REGTEST_INIT=1 yarn test:rest",
    "test:browser": "npx jest --config jest.config.browser.js --detectOpenHandles",
    "test:browser:skip": "SKIP_REGTEST_INIT=1 yarn test:browser",
    "regtest:up": "./jest/docker/start.sh",
    "regtest:down": "./jest/docker/stop.sh",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "nuke": "rm -fr jest/playwright/* && rm -fr node_modules && rm -fr packages/*/node_modules && rm -fr packages/*/dist",
    "build": "yarn build:mainnet-js && yarn build:contract && yarn build:smartbch",
    "build:mainnet-js": "yarn workspace mainnet-js run build ",
    "build:contract": "yarn workspace @mainnet-cash/contract run build",
    "build:smartbch": "yarn workspace @mainnet-cash/smartbch run build",
    "postinstall": "yarn build",
    "demo": "yarn workspace mainnet-demo start",
    "reload": "npx reload --dir=jest/playwright "
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^15.12.2",
    "@types/pg": "^8.6.0",
    "@types/pg-format": "^1.0.1",
    "events": "^3.2.0",
    "fake-indexeddb": "^3.1.2",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.0.4",
    "jest-playwright-preset": "^1.6.1",
    "jest-process-manager": "^0.3.1",
    "node-postgres": "^0.6.2",
    "nyc": "^15.1.0",
    "pg-native": "^3.0.0",
    "playwright": "^1.12.1",
    "prettier": "^2.3.1",
    "reload": "^3.2.0",
    "supertest": "^6.1.3",
    "terser-webpack-plugin": "^5.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typedoc": "^0.20.25",
    "typedoc-plugin-markdown": "^3.5.0",
    "typescript": "^4.3.2",
    "unzipper": "^0.10.11",
    "webpack-bundle-analyzer": "^4.4.2",
    "winston": "3.3.3"
  },
  "optionalDependencies": {
    "@bitauth/libauth": "^1.18.0",
    "@openzeppelin/contracts": "^4.2.0",
    "assert": "^2.0.0",
    "async-mutex": "^0.3.1",
    "axios": "^0.21.1",
    "bchaddrjs-slp": "^0.2.12",
    "bigint-polyfill": "^0.1.0",
    "bignumber": "^1.1.0",
    "bignumber.js": "^9.0.1",
    "bip39": "^3.0.3",
    "buffer": "^6.0.3",
    "cashaddrjs": "^0.4.4",
    "cashc": "^0.6.1",
    "cashscript": "^0.6.1",
    "deepmerge": "^4.2.2",
    "dexie": "^3.0.2",
    "dotenv": "^10.0.0",
    "electrum-cash": "^2.0.8",
    "ethers": "^5.4.6",
    "eventsource": "^1.0.7",
    "npm-dts-webpack-plugin": "^1.3.7",
    "parse-database-url": "^0.3.0",
    "pg": "^8.4.1",
    "pg-format": "^1.0.4",
    "qrcode-svg": "^1.1.0",
    "slp-parser": "^0.0.4",
    "solc": "^0.8.7-fixed",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.2.3",
    "webpack": "^v5.1.0",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "xmlhttprequest-ssl": "^2.0.0",
    "yarn": "^1.22.10"
  },
  "sideEffects": false,
  "keywords": [
    "bch",
    "bitcoin cash"
  ],
  "author": "readcash",
  "dependencies": {}
}
