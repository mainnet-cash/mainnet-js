  "bugs": {
    "url": "https://github.com/mainnet-cash/mainnet-js/issues"
  },
  "name": "mainnet-js",
  "version": "0.0.1-rc",
  "homepage": "https://mainnet.cash",
  "main": "dist/mainnet-node-0.0.1-rc.js",
  "types": "index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.js.map"
  ],
  "scripts": {
    "api:validate": "docker run --rm -v ${PWD}:/local 2qxx/openapi-generator validate -i /local/swagger/v1/api.yml",
    "api:build:server": "docker run --rm -v ${PWD}:/local 2qxx/openapi-generator generate -i /local/swagger/v1/api.yml -g nodejs-express-server -o /local/generated/serve",
    "api:build:client": "node swagger/generate.js",
    "api:serve": "node generated/serve/serve.js",
    "api:serve:cluster": "node generated/serve/cluster.js",
    "cli": "npx ts-node src/cli.ts",
    "coverage": "rm -rf ./node_modules/.cache && rm -rf coverage/ && rm -rf .nyc_output/ && NODE_ENV=test LOG_LEVEL=silent npm run cover:merge",
    "cover": "npm run cover:core && npm run cover:api && npm run cover:browser && npm run cover:report",
    "cover:core": "nyc --silent npm run test",
    "cover:browser": "nyc --silent --no-clean npm run test:browser",
    "cover:api": "nyc --silent --no-clean npm run test:api",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "cover:merge": "npm run cover:core && npm run cover:api && npm run cover:browser && nyc merge .nyc_output coverage/coverage-final.json",
    "test": "npx jest --runInBand --detectOpenHandles",
    "test:api": "npx jest --config jest/rest.config.js --detectOpenHandles",
    "test:db": "npx jest src/db/*.test.* --runInBand --detectOpenHandles",
    "test:wallet": "npx jest src/Wallet.test.ts --runInBand --detectOpenHandles",
    "test:watch": "npx jest src/wallet/Watch.test.ts --runInBand --detectOpenHandles",
    "test:browser": "npx jest --config jest/browser.config.js --detectOpenHandles",
    "test:server": "npx jest generated/serve/services/WalletService.test.ts --runInBand --detectOpenHandles",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "build": "npx webpack",
    "demo": "npx reload --dir=demo/"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.11.8",
    "@types/pg": "^7.14.5",
    "@types/pg-format": "^1.0.1",
    "@types/swagger-ui-express": "^4.1.2",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "camelcase": "^5.3.1",
    "cashscript": "^0.5.3",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "electrum-cash": "^2.0.4",
    "express": "^4.16.4",
    "express-openapi-validator": "^3.17.2",
    "fake-indexeddb": "^3.1.2",
    "jest": "^26.5.3",
    "jest-playwright-preset": "^1.3.1",
    "jest-process-manager": "^0.2.5",
    "js-yaml": "^3.3.0",
    "node-postgres": "^0.6.2",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "openapi-sampler": "^1.0.0-beta.18",
    "pg": "^8.4.1",
    "pg-format": "^1.0.4",
    "pg-native": "^3.0.0",
    "playwright": "^1.4.2",
    "prettier": "^2.1.2",
    "qrcode-svg": "^1.1.0",
    "reload": "^3.1.1",
    "sqlite": "^4.0.15",
    "sqlite3": "^5.0.0",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.0.2",
    "terser-webpack-plugin": "^4.2.3",
    "timeout-signal": "^1.1.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "unzipper": "^0.10.11",
    "webpack": "^v5.1.0",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "winston": "^3.2.1",
    "yarn": "^1.22.10"
  },
